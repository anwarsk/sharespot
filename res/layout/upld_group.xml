<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@layout/border" android:layout_marginBottom="5dip"
	android:stretchColumns="*" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TableRow android:background="@layout/lightborder">
		<LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content" android:gravity="center_vertical">
			<TextView android:id="@+id/bcktName" android:text="hulahula"
				android:textSize="18dip" android:textStyle="bold"
				android:singleLine="true" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView android:id="@+id/numUploads" android:text="hulahula"
				android:textSize="14dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<RelativeLayout android:orientation="horizontal"
			android:layout_width="fill_parent">
			<Button android:id="@+id/upld" android:text="Upload"
				android:layout_width="wrap_content" android:layout_height="60dp"
				android:typeface="serif" android:drawableLeft="@drawable/upld" />
			<ImageButton android:id="@+id/close" android:scaleType="centerCrop"
				android:src="@drawable/selector_close"
				android:layout_alignParentRight="true" android:layout_width="40dp"
				android:layout_height="40dp" />
		</RelativeLayout>
	</TableRow>
	<TableRow>
		<Gallery android:id="@+id/upld_list" android:spacing="2dp"
			android:layout_marginTop="5dip" android:background="#000000"
			android:layout_width="75dip" android:layout_height="70dip" />
		<LinearLayout android:orientation="vertical"
			android:layout_marginLeft="5dip" android:layout_width="fill_parent">
			<ProgressBar android:padding="3dp"
				style="?android:attr/progressBarStyleHorizontal" android:id="@+id/prgrsBar"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:visibility="visible" />
			<TextView android:id="@+id/status" android:text="Ready to Upload"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal" />
		</LinearLayout>
	</TableRow>
</TableLayout>
