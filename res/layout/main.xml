<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/blue_background"
    >
    
<ImageView
android:id="@+id/title"
android:src="@drawable/sharespot"
android:layout_width="99px"
android:layout_height="54px"
android:layout_centerHorizontal="true"
android:layout_marginTop="15dp"
/>

<AbsoluteLayout
android:id="@+id/frmbrowse"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@id/title"
android:layout_alignParentLeft="true"
android:layout_marginLeft="5dip">
	<ImageButton 
	android:id="@+id/btnbrowse"
	android:src="@drawable/selectorbubblebrowse"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_x="1dip"/>	
	<ImageButton
	android:id="@+id/btnflickr"
	android:src="@drawable/selectorbubbleflickr"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_x="100dip"
	android:layout_y="10dip"/>
	<ImageButton
	android:id="@+id/btnpicasa"
	android:src="@drawable/selectorbubblepicasa"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="left"
	android:layout_x="70dip"
	android:layout_y="80dip"/>
	<ImageButton
	android:id="@+id/btnyoutube"
	android:src="@drawable/selectorbubbleyoutube"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="bottom"
	android:layout_x="-10dip"
	android:layout_y="70dip"/>
</AbsoluteLayout>

<ImageButton
android:id="@+id/btnupload"
android:src="@drawable/selectorbubbleupload"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@id/title"
android:layout_marginTop="25dip"
android:layout_alignParentRight="true"
android:layout_marginRight="5dip"
android:layout_toRightOf="@id/btnbrowse"
/>

<ImageButton
android:id="@+id/btnsettings"
android:src="@drawable/selectorbubblesettings"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:layout_marginBottom="5dip"
android:layout_alignParentLeft="true"
android:layout_marginLeft="5dip"
/>

<ImageButton
android:id="@+id/btnexit"
android:src="@drawable/selectorbubbleexit"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@id/btnupload"
android:layout_alignParentBottom="true"
android:layout_marginBottom="15dip"
android:layout_alignParentRight="true"
android:layout_marginRight="15dip"
/>


</RelativeLayout>
