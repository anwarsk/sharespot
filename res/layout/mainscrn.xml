<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/backgrnd">
    
<ImageView
android:id="@+id/title"
android:src="@drawable/sharespot"
android:layout_width="99px"
android:layout_height="54px"
android:layout_centerHorizontal="true"
android:layout_marginTop="15dip"
/>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:layout_below="@id/title">
<ImageButton
android:id="@+id/btnbrowse"
android:src="@drawable/selectorbubblebrowse"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="right"/>
<ImageButton
android:id="@+id/btnupload"
android:src="@drawable/selectorbubbleupload"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="right"
android:layout_marginRight="40dip"/>
<ImageButton
android:id="@+id/btnsettings"
android:src="@drawable/selectorbubblesettings"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="right"
android:layout_marginRight="80dip"/>
<ImageButton
android:id="@+id/btnexit"
android:src="@drawable/selectorbubbleexit"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="right"
android:layout_marginRight="120dip"/>
</LinearLayout>


</RelativeLayout>